{
  "name": "@ciro-maciel/react-app-boilerplate",
  "version": "1.0.0",
  "description": "My version of React/Preact Application Boilerplate",
  "homepage": "https://ciro-maciel.github.io/react-app-boilerplate/",
  "license": "CC-BY-NC-SA-4.0",
  "private": false,
  "author": {
    "name": "Ciro Cesar Maciel",
    "email": "ciro.maciel@c37.co"
  },
  "scripts": {
    "client:dev": "webpack-dev-server --env dev --config ./config/client/dev/webpack.config.js",
    "client:test": "jest",
    "client:build": "webpack --env prod --config ./config/client/prod/webpack.config.js",

    "server:dev": "webpack --env prod --config ./config/client/prod/webpack.config.js && serverless offline",
    "server:debug": "node --inspect ./node_modules/.bin/serverless offline",
    "server:test": "jest",

    "deploy:dev": "webpack --env prod --config ./config/client/prod/webpack.config.js && serverless deploy --stage dev",
    "deploy:hml": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage dev",

    "remove:dev": "serverless remove --stage dev",
    "remove:hml": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage dev"
  },
  "dependencies": {
    "aws-serverless-express": "^3.3.6",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "marked": "^0.3.6",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.3.1",
    "rebass": "^3.1.1",
    "redux": "^3.7.2",
    "redux-observable": "^0.16.0",
    "rxjs": "^5.4.3",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.0.0",
    "dotenv-webpack": "^1.5.4",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webpack": "^5.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^21.2.1",
    "progress-bar-webpack-plugin": "^1.12.1",
    "raw-loader": "^0.5.1",
    "react-x-ray": "^1.0.0-3",
    "redux-logger": "^3.0.6",
    "serverless": "^1.47.0",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-offline": "^5.7.3",
    "serverless-webpack": "^5.3.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "webpack": "^4.36.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
